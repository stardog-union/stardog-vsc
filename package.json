{
    "name": "stardog-vsc",
    "displayName": "stardog-vsc",
    "description": "Stardog utility for querying, syntax highlighting, and autocompletion.",
    "version": "0.0.1",
    "publisher": "stardog-union",
    "engines": {
        "vscode": "^1.9.0"
    },
    "categories": [
        "Extension Packs",
        "Languages",
        "Other"
    ],
    "activationEvents": [
        "onLanguage:sparql"
    ],
    "main": "./extension",
    "contributes": {
        "keybindings": [
            {
                "command": "stardog-vsc.executeQuery",
                "key": "ctrl+e",
                "mac": "cmd+e",
                "when": "editorLangId == sparql"
            },
            {
                "command": "stardog-vsc.foldPrefixes",
                "key": "ctrl+alt+f",
                "mac": "cmd+alt+f",
                "when": "editorLangId == sparql"
            },
            {
                "command": "stardog-vsc.unfoldPrefixes",
                "key": "ctrl+alt+u",
                "mac": "cmd+alt+u",
                "when": "editorLangId == sparql"
            }
        ],
        "commands": [
            {
                "command": "stardog-vsc.executeQuery",
                "title": "Stardog: Execute query",
                "icon": {
                    "dark": "./static/white.svg",
                    "light": "./static/black.svg"
                }
            },
            {
                "command": "stardog-vsc.changeDatabase",
                "title": "Stardog: Change database"
            },
            {
                "command": "stardog-vsc.changeEndpoint",
                "title": "Stardog: Change endpoint"
            },
            {
                "command": "stardog-vsc.prependPrefixes",
                "title": "Stardog: Populate prefixes"
            },
            {
                "command": "stardog-vsc.foldPrefixes",
                "title": "Stardog: Fold prefixes"
            },
            {
                "command": "stardog-vsc.unfoldPrefixes",
                "title": "Stardog: Unfold prefixes"
            },
            {
                "command": "stardog-vsc.insertSampleQuery",
                "title": "Stardog: Insert sample query"
            }
        ],
        "configuration": {
            "title": "Stardog Query Editor Settings",
            "properties": {
                "stardog.endpoint": {
                    "type": "string",
                    "description": "Database endpoint to query."
                },
                "stardog.username": {
                    "type": "string",
                    "description": "User name to authenticate to the database."
                },
                "stardog.password": {
                    "type": "string",
                    "description": "Password to use to authenticate to the database."
                },
                "stardog.database": {
                    "type": "string",
                    "description": "Name of the database to query."
                }
            }
        },
        "menus": {
            "editor/title": [
                {
                    "command": "stardog-vsc.executeQuery",
                    "group": "navigation",
                    "when": "editorLangId == sparql"
                }
            ],
            "commandPalette": [
                {
                    "command": "stardog-vsc.executeQuery",
                    "when": "editorLangId == sparql"
                },
                {
                    "command": "stardog-vsc.changeDatabase",
                    "when": "CONNECTION_ESTABLISHED && editorLangId == sparql"
                },
                {
                    "command": "stardog-vsc.changeEndpoint",
                    "when": "editorLangId == sparql"
                },
                {
                    "command": "stardog-vsc.prependPrefixes",
                    "when": "editorLangId == sparql"
                },
                {
                    "command": "stardog-vsc.foldPrefixes",
                    "when": "editorLangId == sparql"
                },
                {
                    "command": "stardog-vsc.unfoldPrefixes",
                    "when": "editorLangId == sparql"
                }
            ]
        }
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "extensionDependencies": [
        "stardog-union.stardog-rdf-grammars"
    ],
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "eslint": "^4.6.1",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "stardog": "^1.0.0-rc3"
    }
}
