{
	"injectionSelector": "L:text.html.markdown",
    "scopeName": "markdown.trig.codeblock",
    "patterns": [
        {
            "include": "#fenced_code_block_trig"
        }
    ],
    "repository": {
        "fenced_code_block_trig": {
            "begin": "(^|\\G)(\\s*)(`{3,}|~{3,})\\s*(?i:(trig)((\\s+|:|\\{)[^`~]*)?$)",
            "name": "markup.fenced_code.block.markdown",
            "end": "(^|\\G)(\\2|\\s{0,3})(\\3)\\s*$",
            "beginCaptures": {
                "3": {
                    "name": "punctuation.definition.markdown"
                },
				"5": {
					"name": "fenced_code.block.language"
				},
				"6": {
					"name": "fenced_code.block.language.attributes"
				}
			},
            "endCaptures": {
                "3": {
                    "name": "punctuation.definition.markdown"
                }
            },
            "patterns": [
                {
                    "begin": "(^|\\G)(\\s*)(.*)",
                    "while": "(^|\\G)(?!\\s*([`~]{3,})\\s*$)",
                    "contentName": "meta.embedded.block.trig",
                    "patterns": [
                        {
                            "include": "source.trig"
                        }
                    ]
                }
            ]
        }
    }
}