{
  "name": "stardog-query-runner",
  "displayName": "Stardog Query Runner",
  "description": "Run RDF queries from your VSC files.",
  "version": "0.0.1",
  "publisher": "stardog-union",
  "icon": "static/stardog-logo.png",
  "engines": {
    "vscode": "^1.5.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:sparql"
  ],
  "main": "./extension",
  "contributes": {
    "commands": [
      {
        "command": "stardog-query-runner.sendQuery",
        "title": "Stardog: Execute query",
        "icon": {
          "dark": "./static/white.svg",
          "light": "./static.black.svg"
        }
      },
      {
        "command": "stardog-query-runner.pickDatabase",
        "title": "Stardog: Pick database"
      }
    ],
    "configuration": {
      "title": "Stardog Query Runner Settings",
      "properties": {
        "stardog.endpoint": {
          "type": "string",
          "default": null,
          "description": "Database endpoint to query."
        },
        "stardog.username": {
          "type": "string",
          "default": null,
          "description": "User name to authenticate to the database."
        },
        "stardog.database": {
          "type": "string",
          "default": null,
          "description": "Database name to query."
        },
        "stardog.password": {
          "type": "string",
          "default": null,
          "description": "Password to use to authenticate to the database."
        }
      }
    },
    "menus": {
      "editor/title": [
        {
          "command": "stardog-query-runner.sendQuery",
          "group": "navigation",
          "when": "query-ready"
        }
      ],
      "commandPalette": [
        {
          "command": "stardog-query-runner.sendQuery",
          "when": "query-ready"
        }, {
          "command": "stardog-query-runner.pickDatabase",
          "when": "query-ready"
        }
      ]
    }
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test && eslint *.js"
  },
  "devDependencies": {
    "@types/mocha": "2.2.32",
    "@types/node": "6.0.40",
    "eslint": "3.16.0",
    "eslint-config-airbnb-base": "11.1.0",
    "eslint-plugin-import": "2.2.0",
    "mocha": "2.3.3",
    "must": "0.13.4",
    "simple-mock": "0.7.3",
    "typescript": "2.0.3",
    "vscode": "1.0.5"
  },
  "extensionDependencies": [
    "stardog-union.stardog-rdf-grammars"
  ],
  "dependencies": {
    "debounce-promise": "3.0.x",
    "stardog": "0.3.1"
  }
}
